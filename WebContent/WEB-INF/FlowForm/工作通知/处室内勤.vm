					items : [this.detailPanel, this.formPanel]
				});
	},
	
	onEnd:function(formPanel,panel,activityName){
		Ext.getCmp('GZTZCSNQFormView.leaderName').allowBlank = true;
	    Ext.Msg.confirm('信息确认', '请确认是否需要办结。', function(btn) {
			if (btn == 'yes') {
				var sendMail = msgPanel.getCmpByName('sendMail').getValue();
				var sendMsg = msgPanel.getCmpByName('sendMsg').getValue();
				var sendInfo = msgPanel.getCmpByName('sendInfo').getValue();
				var foreachUserIdsLengthsDB = Number('${foreachUserIdsLengths}');
				formPanel.getForm().submit({
					url:__ctxPath+ "/flow/nextProcessActivity.do",
					method:'post',
					waitMsg:'正在提交处理，请稍等',
					scope:this,
					params:{
						taskId : panel.taskId,
						activityName : activityName,
						sendMail : sendMail,
						sendMsg : sendMsg,
						sendInfo: sendInfo,
						isForkFlow:true,
						isEndFlow:true,
						destName:'处内办理合并',
						joinName:'处内办理合并',
						joinedName:'工作确认',
						flowAssignId: '${forkNextUserId}',
						foreachUserIdsLengths:foreachUserIdsLengthsDB,
					    comments: formPanel.getCmpByName('leaderOpinion').getValue() 
					},
					success : function(fp, action) {
						 Ext.ux.Toast.msg('操作信息','操作成功！');
						 AppUtil.removeTab('ProcessForm' + panel.taskId);
						 refreshTaskPanelView();
						 if(Ext.getCmp('ArchWorkGrid')){
							Ext.getCmp('ArchWorkGrid').getStore().reload();
						}
				    },
					failure : function(fp, action) {
						Ext.ux.Toast.msg('操作信息', '操作出错，请联系管理员！');
					}
				});
			}
		});
	},
	
	//保存方法
	onSave : function(formPanel, panel, signalName, activityName) {
		singleClick('gztzsaveBtn007');
		if (formPanel.getForm().isValid()) {
			Ext.Msg.confirm('信息确认', '请确认是否执行此操作。', function(btn) {
				if (btn == 'yes') {
					var leaderId=Ext.getCmp('GZTZCSNQFormView.leaderId').getValue();
					var comments=formPanel.getCmpByName('leaderOpinion').getValue();
					var foreachUserIdsLengthsDB = Number('${foreachUserIdsLengths}');
					var sendMail = msgPanel.getCmpByName('sendMail').getValue();
					var sendMsg = msgPanel.getCmpByName('sendMsg').getValue();
					var sendInfo = msgPanel.getCmpByName('sendInfo').getValue();
					var option = formPanel.getCmpByName('option').getGroupValue();
					var params = {
						taskId : panel.taskId,
						activityName : activityName,
						sendMail : sendMail,
						sendMsg : sendMsg,
						sendInfo: sendInfo,
						joinName:'处内办理合并',
						foreachUserIdsLengths:foreachUserIdsLengthsDB,
						comments: formPanel.getCmpByName('leaderOpinion').getValue() 
					};
					if(option == 1){
						Ext.apply(params,{
							signalName : signalName,
							flowAssignId:leaderId
						});
					}else{
						Ext.apply(params,{
							isForkFlow:true,
							isEndFlow:true,
							destName:'处内办理合并',
							joinedName:'工作确认',
							flowAssignId: '${forkNextUserId}'
						});
					}
					addMsgFunction(true,taskId);
					formPanel.getForm().submit({
						url : __ctxPath + "/flow/nextForSyncProcessActivity.do",
						method : 'post',
						waitMsg : '正在提交数据...',
						params : params,
						success : function(fp, action) {	
							Ext.MessageBox.hide();	
							var jsonResult = action.result;
							if (jsonResult && jsonResult.success == "true") {
								Ext.ux.Toast.msg("操作信息", "保存成功！");
							}else {
								var resultMsg = "信息保存出错，请联系管理员！";
								var resuIcon = Ext.MessageBox.ERROR;
								if (jsonResult.message && jsonResult.message != null) {
									resultMsg = jsonResult.message;
									if (jsonResult.code && (jsonResult.code == '2' || jsonResult.code == '3')) {
										resuIcon= Ext.MessageBox.WARNING;
									}
								}
								Ext.MessageBox.show({
								title : '操作信息',
								msg : resultMsg,
								buttons : Ext.MessageBox.OK,
								icon : resuIcon
								});
							}
							AppUtil.removeTab('ProcessForm' + panel.taskId);
							refreshTaskPanelView();
							if(Ext.getCmp('ArchWorkGrid')){
								Ext.getCmp('ArchWorkGrid').getStore().reload();
							}
						},
						failure : function(fp, action) {
							Ext.MessageBox.hide();
							Ext.ux.Toast.msg('操作信息', '操作出错，请联系管理员！');
						} 
					}); 
				}
			});
		}
	},

