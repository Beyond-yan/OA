						underTakeId : userId,
						sendInfo: sendInfo,
						comments:comments
			};
			if(option==1){
				if(organizeIds!=null&&organizeIds!=''){
					Ext.apply(params,{
						destName : '协办部门',
						signalName : 'to协办部门',
//						status : '协办部门',
						signUserIds : organizeIds
					});
				}else{
					result='承办部门';
					Ext.apply(params,{
//						status:result,
						signalName : signalName,
						divNext: option,
						destName : '承办部门',
						flowAssignId:userId	 
					});
				}
			}else{
			    result='呈中心领导批示';
			    Ext.apply(params,{
					destName : '中心领导批示',
					signalName : signalName,
					divNext: option,
					status:result,
					signUserIds : userId	 
				});
			}
			formPanel.getForm().submit({
						method : 'POST',
						url : __ctxPath + "/flow/nextProcessActivity.do",
						params : params,
						waitMsg : '正在提交数据...',
						success : function(fp, action) {
							Ext.Ajax.request({
								url : __ctxPath + "/archive/updateArchDocsArchives.do",
								params : {
										  arcRecfileIds : Ext.getCmp('infoCenterReceiveArchivesForm.reFileId').getValue(),
										  'archives.archivesId':'${archivesId}'
										  },
								method : 'POST',
