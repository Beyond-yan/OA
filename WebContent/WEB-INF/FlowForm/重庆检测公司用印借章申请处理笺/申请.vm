					id : "WSOfficeFW.recDepIds"
				}, {
					xtype : "hidden",
					name : "archives.recDepNames",
					id : "WSOfficeFW.recDepNames"
				},{
				border : false,
				items : [{
					layout : "column", // 从左往右的布局
					border : false,
			       	items : [{
						layout : 'form',
						border : false,
						columnWidth : .33,
		       		    items : [{
							border : false,
							xtype : 'textfield',
							fieldLabel : "申请部门",
							width:'80%',
							name : 'archives.issueDep',
							id : 'WSOfficesentDoc.issueDep',
							readOnly : true
						}]
					},{
						layout : 'form',
						border : false,
						columnWidth : .33,
		       		    items : [{
							border : false,
							xtype : 'textfield',
							fieldLabel : '申请人',
							width:'80%',
							name : "archives.issuer",
							readOnly : true,
							value : curUserInfo.fullname
						}]
					},{
						layout : 'form',
						border : false,
						columnWidth : .33,
		       		    items : [{
							xtype : "combo",
							fieldLabel : '缓急',
