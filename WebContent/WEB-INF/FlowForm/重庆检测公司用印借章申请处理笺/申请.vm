							}, {
								xtype : 'button',
								text : '清除文件',
								iconCls : 'reset',
								handler : function() {
									var fileAttaches = Ext.getCmp('WSOfficesentAttachments.fileIds');
									var filePanel = Ext.getCmp('sentAttachments.personFilePanel');

									filePanel.body.update('');
									fileAttaches.setValue('');
