	/**
	 * 保存公文的方法,传入公文状态作为参数
	 */
	onSave : function(formPanel, panel, signalName, activityName) {
		var result='呈处内承办';
		var comments=formPanel.getCmpByName('leaderOpinion').getValue();
		var userId = formPanel.getCmpByName('userId').getValue();
		if (formPanel.getForm().isValid()) {
			var option = formPanel.getCmpByName('option').getGroupValue();
			var sendMail = msgPanel.getCmpByName('sendMail').getValue();
			var sendMsg = msgPanel.getCmpByName('sendMsg').getValue();
			var sendInfo = msgPanel.getCmpByName('sendInfo').getValue();
			var docParams=Ext.getCmp("ZCBSectionUndertakeFormView.reFileId");
			var params={
				           isNext:option,
							taskId : taskId,
							signalName : signalName,
							activityName : activityName,
							sendMail : sendMail,
							sendMsg : sendMsg,
							sendInfo: sendInfo,
							officeId : curUserInfo.userId,
							comments:comments
						};
							if (option == '1') {
							Ext.apply(params,{
								destName : '办理完成'
							});
						} 
						else if (option == '2') {
							Ext.apply(params,{
								destName : '处室承办',
								flowAssignId : userId
							});
						}
		/*	for (var i = 0, cnt = panel.store.getCount(); i < cnt; i++) {
