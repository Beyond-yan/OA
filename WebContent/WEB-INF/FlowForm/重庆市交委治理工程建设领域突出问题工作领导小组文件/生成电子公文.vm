			    url:__ctxPath+'/archive/updateIsComSettingArchives.do?archivesId=${archivesId}',
			    method:'post',
			    success:function(response,options){
			      Ext.ux.Toast.msg('操作信息','排版成功！');
			    
			    },
			    failure:function(response,options){
			      Ext.ux.Toast.msg('操作信息','排版失败！');
			    
			    }
	  });
		   }
		});
	  
