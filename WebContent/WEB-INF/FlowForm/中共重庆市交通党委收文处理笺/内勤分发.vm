	onReset:function(formPanel,panel,activityName){
	    var comments=formPanel.getCmpByName('leaderOpinion').getValue();
	    if(comments==""){
	        alert("请填写意见！");
	        return false;
	    }
		var sendMail = msgPanel.getCmpByName('sendMail').getValue();
		var sendMsg = msgPanel.getCmpByName('sendMsg').getValue();
		var sendInfo = msgPanel.getCmpByName('sendInfo').getValue();
		formPanel.getForm().submit({
			url:__ctxPath+ "/flow/nextProcessActivity.do",
			method:'post',
			waitMsg:'正在提交处理，请稍等',
			scope:this,
			params:{
				taskId : panel.taskId,
				status:'退文',
				signalName : 'to 重新登记',
				activityName : activityName,
				comments : formPanel.getCmpByName('leaderOpinion').getValue(),
				destName : '重新登记',
				sendMail : sendMail,
				sendMsg : sendMsg,
				sendInfo:sendInfo,
				isBack:true,
				flowAssignId : '${userId}'
			},
			success : function(fp, action) {
				Ext.Ajax.request({
					url : __ctxPath + "/archive/saveArchivesDep.do",
					params : {
					    depIds : '${depId}',
					    archivesId:'${archivesId}'
					},
					method : 'POST',
					success : function(fp, action) {
						 Ext.ux.Toast.msg('操作信息','退文成功！');
						 AppUtil.removeTab('ProcessForm' + panel.taskId);
						 refreshTaskPanelView();
					},
					failure : function(fp, action) {
						Ext.ux.Toast.msg('操作信息', '操作出错，请联系管理员！');
					}
				});
		    },
			failure : function(fp, action) {
				Ext.ux.Toast.msg('操作信息', '操作出错，请联系管理员！');
			}
		});
	},
	backsetp:function(formPanel,panel,activityName){
		Ext.getCmp('NQFFViewWin.proposeLeaderNames').allowBlank=true;
		Ext.getCmp('NQFFViewWin.twoLeaderNames').allowBlank=true;
		Ext.getCmp('NQFFViewWin.threeLeaderNames').allowBlank=true;
		if (!formPanel.getForm().isValid()){return false;}
		 Ext.Ajax.request({
			url : __ctxPath + '/flow/getPreviousStepProcessRun.do',
			params : {
				'taskId' : panel.taskId
			},
			method:'post',
			success : function(response, options) {
				var processForm = Ext.util.JSON.decode(response.responseText).data;
				var prevSignalName  = processForm[0].signalName;
				var prevDestName  = processForm[0].activityName;
				var prevFlowAssignId =  processForm[0].creatorId;
				formPanel.getForm().submit({
						url:__ctxPath+ "/flow/nextProcessActivity.do",
						method:'post',
						waitMsg:'正在提交处理，请稍等',
						scope:this,
						params:{
								taskId : panel.taskId,
								signalName : prevSignalName,
								activityName : activityName,
								comments : formPanel.getCmpByName('NQFFViewWin.leaderOpinion').getValue(),
								destName : prevDestName,
								status : '退回',
								//看是否指定了执行人员
								flowAssignId : prevFlowAssignId
						},
						success : function(fp, action) {
										 Ext.ux.Toast.msg('操作信息','退回上一步成功！');
										 AppUtil.removeTab('ProcessForm' + panel.taskId);
										 refreshTaskPanelView();
						},
						failure : function(fp, action) {
							Ext.ux.Toast.msg('操作信息', '操作出错，请联系管理员！');
						}
					}
				
				);},
			failure : function(response, options) {
					Ext.ux.Toast.msg('操作信息', '撤回出错，请联系管理员！');
				}
			});
	},
	/**
	 * 保存公文的方法,传入公文状态作为参数
	 */
	onSave : function(formPanel, panel, signalName, activityName) {
		singleClick('saveBtn3008');
		var userId = Ext.getCmp('NQFFViewWin.userId').getValue();
		var option = formPanel.getCmpByName('depOption').getGroupValue();
		var sendMail = msgPanel.getCmpByName('sendMail').getValue();
		var sendMsg = msgPanel.getCmpByName('sendMsg').getValue();
		var sendInfo = msgPanel.getCmpByName('sendInfo').getValue();
		var comments=formPanel.getCmpByName('NQFFViewWin.leaderOpinion').getValue();
		var twoUserId=Ext.getCmp('NQFFViewWin.threeUserId').getValue();
		var params={
			taskId : panel.taskId,
			signalName : signalName,
			activityName : activityName,
			sendMail : sendMail,
			sendMsg : sendMsg,
			proposeId : userId,
			sendInfo : sendInfo,
			comments:comments
		};
		var userIds="";
		if(2==option){//处内拟办
			Ext.apply(params,{
				fenfaOption : 2,
				flowAssignId:userId
			});
			userIds=userId;
		}else if(1==option){//领导批示
			Ext.apply(params,{
				isForkFlow:true,
				joinName:'处内办理合并',
				fenfaOption : 1,
				forkNextUserId:curUserInfo.userId,
				isForkFlow:true,
				joinName:'处内办理合并',
				leader2UserIds:twoUserId
			});
			userIds=twoUserId;
		}
		if(userIds!=""){
			addMsgFunction(true,taskId);
			Ext.apply(params,{
				userIds : userIds
			});
			if (formPanel.getForm().isValid()) {
				formPanel.getForm().submit({
					method : 'POST',
					timeout:120000,
					url : __ctxPath + "/flow/nextForSyncProcessActivity.do",
					params : params,
					//waitMsg : '正在提交数据...',
					success : function(fp, action) {
						Ext.MessageBox.hide();
						var jsonResult = action.result;
						if (jsonResult && jsonResult.success == "true") {
							Ext.ux.Toast.msg("操作信息", "保存成功！");
						}else if(jsonResult.code && jsonResult.code == '4'){
						     alert(jsonResult.message);
							 return false;
						} else {
							var resultMsg = "信息保存出错，请联系管理员！";
							var resuIcon = Ext.MessageBox.ERROR;
							if (jsonResult.message && jsonResult.message != null) {
								resultMsg = jsonResult.message;
								if (jsonResult.code && (jsonResult.code == '2' || jsonResult.code == '3')) {
									resuIcon= Ext.MessageBox.WARNING;
								}
							}
							Ext.MessageBox.show({
							title : '操作信息',
							msg : resultMsg,
							buttons : Ext.MessageBox.OK,
							icon : resuIcon
							});
						}
						AppUtil.removeTab('ProcessForm' + taskId);
						refreshTaskPanelView();
					},
					failure : function(fp, action) {
						Ext.MessageBox.hide();
						Ext.MessageBox.show({
							title : '操作信息',
							msg : '当前系统繁忙，请稍后再处理！',
							buttons : Ext.MessageBox.OK,
							icon : Ext.MessageBox.WARNING
						});
					}
				});
			}
		}
	},

