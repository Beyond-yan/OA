							name : 'depOption',
							inputValue : 2,
							listeners : {
								'check' : function(checkbox, checked) {
									if (checked) {
										Ext.getCmp('JYTABSentFilesDepCheck.signDep').hide();
										Ext.getCmp('JYTABSentFilesDepCheck.signerNames').allowBlank = true;
									}
								}
							}
						}/*,{
							boxLabel : '退回',
							name : 'depOption',
							inputValue : 4,
							listeners : {
								'check' : function(checkbox, checked) {
									if (checked) {
										Ext.getCmp('JYTABSentFilesDepCheck.signDep').hide();
										Ext.getCmp('JYTABSentFilesDepCheck.signerNames').allowBlank = true;
									}
								}
							}
						}*/],
						fieldLabel : '审批步骤'
