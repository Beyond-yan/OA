	/**
	 * 保存公文的方法,传入公文状态作为参数
	 */
	onSave : function(formPanel, panel, signalName, activityName) {
		var userId = Ext.getCmp('ZFXXOfficeDistributeViewWin.userId').getValue();
		var option = formPanel.getCmpByName('depOption').getGroupValue();
		var sendMail = msgPanel.getCmpByName('sendMail').getValue();
		var sendMsg = msgPanel.getCmpByName('sendMsg').getValue();
		var sendInfo = msgPanel.getCmpByName('sendInfo').getValue();
		var comments=formPanel.getCmpByName('leaderOpinion').getValue();
		var params={
			taskId : panel.taskId,
			signalName : signalName,
			activityName : activityName,
			sendMail : sendMail,
			sendMsg : sendMsg,
			proposeId : userId,
			officeExerId:curUserInfo.userId,
			sendInfo : sendInfo,
			comments:comments
		};
		if(1==option){//处内拟办
			var organizeIds=Ext.getCmp('ZFXXOfficeDistributeViewWin.viceLeaderIds').getValue();
			if(organizeIds!=null&&organizeIds!=''){
				Ext.apply(params,{
					sentNext : 3,
					destName : '处内协办',
					signUserIds : organizeIds
				});
			}else{
				if(userId!=0){
					Ext.apply(params,{
						sentNext : 4,
						flowAssignId:userId
					});
				}
			}
		}else if(2==option){//处内承办
			Ext.apply(params,{
					sentNext : 2,
					flowAssignId:Ext.getCmp('ZFXXOfficeDistributeViewWin.twoUserId').getValue()
				});
		}else if(3==option){//领导批示
			Ext.apply(params,{
					sentNext : 1,
					destName : '领导批示2',
					signUserIds : Ext.getCmp('ZFXXOfficeDistributeViewWin.threeUserId').getValue()
				});
		}else if(4==option){//结束
			Ext.apply(params,{
					sentNext : 5
				});
		}
		if (formPanel.getForm().isValid()) {
			var docParams=Ext.getCmp("ZFXXOfficeDistributeViewWin.reFileId");
			formPanel.getForm().submit({
						method : 'POST',
						url : __ctxPath + "/flow/nextForSyncProcessActivity.do",
						params : params,
						waitMsg : '正在提交数据...',
                timeout : 120000,
						success : function(fp, action) {
                            // --无后续的错误友好提示开始
                            var jsonResult = action.result;
                            if (jsonResult) {
                                if (jsonResult && jsonResult.success == "true") {
                                    Ext.ux.Toast.msg("操作信息", "操作成功！");
                                } else {
                                    var resultMsg = "信息保存出错，请联系管理员！";
                                    var resuIcon = Ext.MessageBox.ERROR;
                                    if (jsonResult.message && jsonResult.message != null) {
                                        resultMsg = jsonResult.message;
                                        if (jsonResult.code && (jsonResult.code == '2' || jsonResult.code == '3')) {
                                            resuIcon= Ext.MessageBox.WARNING;
                                        }
                                    }
                                    Ext.MessageBox.show({
                                        title : '操作信息',
                                        msg : resultMsg,
                                        buttons : Ext.MessageBox.OK,
                                        icon : resuIcon
                                    });
                                }
                            }
                            // --无后续的错误友好提示结束
							AppUtil.removeTab('ProcessForm' + taskId);
							refreshTaskPanelView();
						},
						failure : function(fp, action) {
                            Ext.MessageBox.show({
                                title : '操作信息',
                                msg : '当前系统繁忙，请稍后再处理！',
                                buttons : Ext.MessageBox.OK,
                                icon : Ext.MessageBox.WARNING
                            });
						}
					});
		}
