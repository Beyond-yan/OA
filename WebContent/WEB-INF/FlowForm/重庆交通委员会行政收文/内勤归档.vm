		// 显示公文详细信息
		this.detailPanel = new Ext.Panel({
					autoHeight : true,
					columnWidth : 1,
					id:'XZNQGDArchiveReceiveDetailPanel',
					autoScroll : true,
					autoLoad : {
						url : __ctxPath+'/pages/flowPath/receiveFlow.jsp?archiveId=${archivesId}&fileIds=${fileIds}&defId=${defId}&detailId=XZNQGDArchiveReceiveDetailPanel',
						nocache : true
					}
				});
		// 初始化表单
		this.formPanel = new Ext.FormPanel({
			columnWidth : 1,
			layout : 'form',
			id : 'XZSWSectionInnertakeFormView',
			autoHeight : true,
			style : 'padding:6px 6px 6px 1%',
			items : [{
						xtype : 'radiogroup',
						id : 'XZSWSectionInnertakeFormView.radiogroups',
						allowBlank : false,
						columns :[0.5,0.5],
						items : [{
							boxLabel : '转办',
							width :160,
							name : 'depOption',
							inputValue : 1,
							checked : true,
							listeners : {
