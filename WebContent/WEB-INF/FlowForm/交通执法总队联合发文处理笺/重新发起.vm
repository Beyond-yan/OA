				name:'archives.status'
			},{
				xtype:'hidden',
				id:'TrafficEnforceTeamSentArchiveReStart.reFileId'
			}]
		});
		
		if (this.archivesId) {
				var filePanel = Ext.getCmp('TrafficEnforceTeamReFiles.personFilePanel');
				var fileIds = Ext.getCmp("TrafficEnforceTeamReFiles.fileIds");
				Ext.Ajax.request({
						url : __ctxPath + '/archive/getAttachFilesArchives.do',
						params : {
							'fileIds' : '${fileIds}'
						},
						method:'post',
						success : function(response, options) {
							var af=Ext.util.JSON.decode(response.responseText).data;
							if(af!=null){
							for (var i = 0; i < af.length; i++) {
								if (fileIds.getValue() != '') {
									fileIds.setValue(fileIds.getValue() + ',');
								}
								fileIds.setValue(fileIds.getValue() + af[i].fileId);
								Ext.DomHelper
										.append(
												filePanel.body,
												'<span><a href="#" onclick="FileAttachDetail.show('
														+ af[i].fileId
														+ ')">'
														+ af[i].fileName
														+ '</a><img class="img-delete" src="'
														+ __ctxPath
														+ '/images/system/delete.gif" onclick="removeFile(this,\'TrafficEnforceTeamReFiles.fileIds\','
														+ af[i].fileId
														+ ')"/>&nbsp;|&nbsp;</span>');
							}
						}
						}
			});
		
			this.formPanel.getForm().load({
				deferredRender : false,
				url : __ctxPath + '/archive/getArchDataArchives.do?archivesId='
						+ this.archivesId,
				waitMsg : '正在载入数据...',
				method:'post',
				success : function(form, action) {
					var isStandard=action.result.data['archives.isStandard'];
					var isPublic=action.result.data['archives.isPublic'];
					if(isPublic==0){
						Ext.get("TrafficEnforceTeamSentArchiveReStart.unPublic").dom.checked=true;
					}else{
						Ext.get("TrafficEnforceTeamSentArchiveReStart.public").dom.checked=true;
						Ext.getCmp('TrafficEnforceTeamSentArchiveReStart.unPublicReasons').allowBlank = true;
						Ext.getCmp('TrafficEnforceTeamSentArchiveReStart.unPublicReasons').hide();
						Ext.getCmp('TrafficEnforceTeamSentArchiveReStart.unPublicReasons').el.parent().parent().hide();
					}
					if(isStandard==0){
						Ext.get("TrafficEnforceTeamSentArchiveReStart.unStandard").dom.checked=true;
					}else{
						Ext.get("TrafficEnforceTeamSentArchiveReStart.standard").dom.checked=true;
					}
					var data = Ext.decode(action.response.responseText).data[0];
					Ext.getCmp('TrafficEnforceTeamSentArchiveReStart.archivesType').setValue(data.parentArchId);
					Ext.getCmp('TrafficEnforceTeamSentArchiveReStart.flowAssignId').setValue(data.reviewUser);
				},
				failure : function(form, action) {
				}
			});
		}
	}
