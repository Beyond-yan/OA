							id:'TrafficEnforceTeamSentArchiveReStart.standard',
							name : 'archives.isStandard',
							inputValue : 1
						}, {
							boxLabel : '普通文件',
							id:'TrafficEnforceTeamSentArchiveReStart.unStandard',
							name : 'archives.isStandard',
							inputValue : 0
						}]
			}, {
				xtype : 'radiogroup',
				fieldLabel : '是否公开',
				items : [{
					boxLabel : '不公开',
					id:'TrafficEnforceTeamSentArchiveReStart.unPublic',
					name : 'archives.isPublic',
					inputValue : 0,
