								Ext.getCmp('TrafficEnforceTeamSentArchiveReStart.unPublicReasons').allowBlank = false;
								Ext.getCmp('TrafficEnforceTeamSentArchiveReStart.unPublicReasons').show();
								Ext.getCmp('TrafficEnforceTeamSentArchiveReStart.unPublicReasons').el.parent().parent().show();
							}
						}
					}
				},{
					boxLabel : '公开到外网',
					id:'TrafficEnforceTeamSentArchiveReStart.public',
					name : 'archives.isPublic',
					inputValue : 1,
					listeners : {
						'check' : function(checkbox, checked) {
							if (checked) {
								Ext.getCmp('TrafficEnforceTeamSentArchiveReStart.unPublicReasons').allowBlank = true;
								Ext.getCmp('TrafficEnforceTeamSentArchiveReStart.unPublicReasons').hide();
								Ext.getCmp('TrafficEnforceTeamSentArchiveReStart.unPublicReasons').el.parent().parent().hide();
								Ext.getCmp('TrafficEnforceTeamSentArchiveReStart.unPublicReasons').setValue("");
